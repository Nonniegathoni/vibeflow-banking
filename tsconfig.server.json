{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2019",
    "lib": ["ES2019"],
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./backend/types"]
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}

